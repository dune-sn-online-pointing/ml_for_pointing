{
  "model": "SimpleCNN",
  "model_name": "CT_V13_SIMPLE",
  "description": "Channel tagging with simple CNN - no hyperopt, fixed reasonable parameters",
  "version": "v13_simple",
  
  "data_parameters": {
    "data_dirs": ["/eos/user/e/evilla/dune/sn-tps/production_es/cluster_images_fixed_matching"],
    "plane": "X",
    "max_samples": 50000,
    "shuffle_data": true,
    "balance_data": false,
    "batch_size": 32,
    "preprocessing": {
      "target_shape": [64, 8],
      "method": "resize"
    }
  },
  
  "model_parameters": {
    "input_shape": [64, 8, 1],
    "n_conv_layers": 3,
    "n_filters": 32,
    "kernel_size": 3,
    "n_dense_layers": 2,
    "dense_units": 128,
    "dropout_rate": 0.3,
    "learning_rate": 0.001
  },
  
  "training_parameters": {
    "epochs": 100,
    "validation_freq": 5,
    "early_stopping_patience": 15,
    "reduce_lr_patience": 7
  },
  
  "output_folder": "/afs/cern.ch/work/e/evilla/private/dune/ml_for_pointing/training_output"
}
