{
  "model_type": "simple_cnn",
  "version": "v2_balanced_10k",
  "description": "CT classification with balanced 10k samples (5k ES + 5k CC) from nov10 volume images",
  
  "data": {
    "es_directory": "/eos/user/e/evilla/dune/sn-tps/production_es/volume_images_nov10/",
    "cc_directory": "/eos/user/e/evilla/dune/sn-tps/production_cc/volume_images_nov10/",
    "plane": "X",
    "max_samples_per_class": 5000,
    "train_split": 0.8,
    "shuffle": true
  },
  
  "model": {
    "input_shape": [208, 1242, 1],
    "n_classes": 2,
    "n_conv_layers": 3,
    "n_filters": 32,
    "dropout_rate": 0.3,
    "dense_units": 128
  },
  
  "training": {
    "optimizer": "adam",
    "learning_rate": 0.001,
    "epochs": 50,
    "batch_size": 16,
    "early_stopping_patience": 10,
    "reduce_lr_patience": 5,
    "reduce_lr_factor": 0.5,
    "min_lr": 1e-6
  },
  
  "output": {
    "base_dir": "/eos/user/e/evilla/dune/sn-tps/neural_networks/channel_tagging/",
    "save_best_only": true,
    "save_checkpoints": true
  }
}
