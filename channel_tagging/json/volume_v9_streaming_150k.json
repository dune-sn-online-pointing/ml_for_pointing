{
    "model_type": "simple_cnn",
    "version": "v9_streaming_150k",
    "description": "CT streaming with 150k balanced samples (75k ES + 75k CC)",
    
    "data": {
        "es_directory": "/eos/user/e/evilla/dune/sn-tps/production_es/volume_images_nov10/",
        "cc_directory": "/eos/user/e/evilla/dune/sn-tps/production_cc/volume_images_nov10/",
        "plane": "X",
        "max_samples_per_class": 75000,
        "train_split": 0.8,
        "shuffle": true
    },
    
    "model": {
        "input_shape": [208, 1242, 1],
        "n_classes": 2,
        "n_conv_layers": 4,
        "n_filters": 64,
        "use_batch_norm": true,
        "dropout_rate": 0.4,
        "dense_units": 256
