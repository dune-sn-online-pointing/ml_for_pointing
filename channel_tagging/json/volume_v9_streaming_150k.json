    "training": {
        "optimizer": "adam",
        "learning_rate": 0.0005,
        "epochs": 100,
        "batch_size": 16,
        "early_stopping_patience": 25,
        "reduce_lr_patience": 10,
        "reduce_lr_factor": 0.5,
        "min_lr": 1e-6,
        "streaming_mode": true
    },
    
    "hyperopt": {
        "enabled": false
    },
    
    "output": {
        "base_dir": "/eos/user/e/evilla/dune/sn-tps/neural_networks/channel_tagging/",
        "save_best_only": true
    }
