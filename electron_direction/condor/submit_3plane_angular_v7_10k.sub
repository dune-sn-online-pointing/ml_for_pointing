# HTCondor submission file for 3-plane electron direction regression
# Version: v7 with angular loss, FIXED image flipping
# Dataset: 10k matched samples from nov11 (corrected)

executable = electron_direction/condor/condor_wrapper_3plane_simple.sh
arguments = -j electron_direction/json/three_plane_angular_v7_10k.json

output = electron_direction/logs/three_plane_angular_v7_10k_$(ClusterId).out
error = electron_direction/logs/three_plane_angular_v7_10k_$(ClusterId).err
log = electron_direction/logs/three_plane_angular_v7_10k_$(ClusterId).log

# Resource requirements
request_cpus = 1
request_memory = 16GB
request_gpus = 1
+Requirements = OpSysAndVer =?= "AlmaLinux9"

# Job flavor (runtime limit)
+JobFlavour = "tomorrow"

# Accounting group
+AccountingGroup = "group_u_DUNE.users"

queue 1
