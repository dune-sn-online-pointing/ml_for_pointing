# HTCondor submit file for ED incremental training (v16)
executable = electron_direction/condor/condor_wrapper_3plane_incremental.sh
arguments = -j electron_direction/json/three_plane_v16_incremental_50k.json

output = electron_direction/logs/3plane_v16_incremental_$(ClusterId).out
error = electron_direction/logs/3plane_v16_incremental_$(ClusterId).err
log = electron_direction/logs/3plane_v16_incremental_$(ClusterId).log

# Resource requests
request_cpus = 1
request_gpus = 1
request_memory = 20GB
request_disk = 5GB

# Job flavor (time limit)
+JobFlavour = "tomorrow"

# Requirements
requirements = (OpSysAndVer =?= "AlmaLinux9")

# Transfer files
should_transfer_files = YES
when_to_transfer_output = ON_EXIT

queue
