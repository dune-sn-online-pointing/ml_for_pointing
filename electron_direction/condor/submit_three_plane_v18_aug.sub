# Condor submission script for ED v18 with data augmentation
universe = vanilla
executable = electron_direction/condor/condor_wrapper_3plane_simple.sh
arguments = -j electron_direction/json/three_plane_v18_200k_aug.json

output = electron_direction/logs/three_plane_v18_aug_$(ClusterId).out
error = electron_direction/logs/three_plane_v18_aug_$(ClusterId).err
log = electron_direction/logs/three_plane_v18_aug_$(ClusterId).log

# Request GPU resources
request_gpus = 1
request_cpus = 1
request_memory = 16GB
request_disk = 10GB

# Job duration
+JobFlavour = "tomorrow"
+MaxRuntime = 86400

# Accounting
accounting_group = group_u_DUNE.users

# Notification
notify_user = evilla@cern.ch
notification = Error

queue 1
