{
  "model_type": "three_plane_cnn",
  "version": "v6_test_100",
  "description": "3-plane ED regression test with 100 samples, cosine similarity loss",
  
  "data": {
    "data_directories": [
      "/eos/user/e/evilla/dune/sn-tps/production_es/cluster_images_nov10/"
    ],
    "require_three_plane_match": true,
    "max_samples": 100,
    "train_split": 0.8,
    "shuffle": true
  },
  
  "model": {
    "input_shape": [128, 16, 1],
    "output_dim": 3,
    "normalize_output": true
  },
  
  "training": {
    "loss": "cosine_similarity",
    "optimizer": "adam",
    "learning_rate": 0.001,
    "epochs": 10,
    "batch_size": 16,
    "early_stopping_patience": 5,
    "reduce_lr_patience": 3,
    "reduce_lr_factor": 0.5,
    "min_lr": 1e-6
  },
  
  "output": {
    "base_dir": "/eos/user/e/evilla/dune/sn-tps/neural_networks/electron_direction/",
    "save_best_only": true,
    "save_checkpoints": true
  }
}
